#:kivy 1.8
#:import random random
#:import sys sys

<MenuScreen>:
    GridLayout:
        cols: 1
        Label:
            id: titleMenu
            text: "PyRPG"
            font_size: 100
        GridLayout:
            id: gridMenu
            cols: 2

<HelpScreen>:
    GridLayout:
        cols:1
        Label:
            text:'this is how the game works'
        Button:
            text: 'Go back to menu'
            on_release: root.manager.current = 'menu'


<NewGameScreen>:
    GridLayout:
        cols:1
        Label:
            id: titleNewGame
            text: "New Game"
            font_size: 50
        GridLayout:
            cols: 2
            Label:
                text : "Name :"
            GridLayout:
                cols:1
                Label:
                    id: nameerror
                    color: (1, 0, 0, 1)
                    text : ""
                TextInput:
                    id : nameNewGame
                    hint_text : "your name"
                    halign: "center"
                    multiline: False
            Label:
                text : "Seed :"
            GridLayout:
                cols: 1
                TextInput:
                    id : seedNewGame
                    hint_text : "your seed"
                    halign: "center"
                    multiline: False
                Button:
                    text:'regenerate a new seed'
                    on_release: root.ids.seedNewGame.text = str(random.randrange(sys.maxsize))
        Button:
            id :buttonCreateGame
            text: "Create Game"

<CryptoScreen>:
    GridLayout:
        id:cryptodisplay
        cols:3
        GridLayout:
            cols:1
            row:4
            Button:
                id:btc
                text:"BTC"
                on_release:root.changeCrypto("BTC-EUR")
            Button:
                id:eth
                text:"ETH"
                on_release:root.changeCrypto("ETH-EUR")
            Button:
                id:sol
                text:"SOL"
                on_release:root.changeCrypto("SOL-EUR")
            Button:
                id:xmr
                text:"XMR"
                on_release:root.changeCrypto("XMR-EUR")
        GridLayout:
            cols:1
            row:6
            GridLayout:
                cols:1
                id: testcanvas
            Label:
                text:
            Label:
                text:
            Label:
                text:
            Button:
                text:"buy"
                on_release:root.buy()
            GridLayout:
                cols:1
                TextInput:
                    id:amount
                    hint_text:"amount"
                    multiline: False
                    cursor_blink: False
                    halign:"center"
                Label:
                    id:balanceeur
                    text:"Balance"
        GridLayout:
            cols:1
            row:6
            Label:
                text:
            Label:
                text:
            Label:
                text:
            Label:
                text:
            Button:
                text:"sell"
                on_release:root.sell()
            GridLayout:
                cols:1
                GridLayout:
                    rows: 1
                    Button:
                        text:"Max Buy"
                        on_release:root.maxBuy()
                    Button:
                        text:"Max Sell"
                        on_release:root.maxSell()
                Label:
                    id:actprice
                    text:""

<GameScreen>:
    GridLayout:
        cols:3
        GridLayout:
            cols:1
            size_hint: .2, 1
            Label:
                text:''
        GridLayout:
            cols:1
            row:3
            Label:
                id: gametext
                text:'the game text'
            Label:
                id : textaction
                text:'what action can you do'
            GridLayout:
                cols:1
                row:2
                Label:
                    id: previousactions
                    text:'previous actions :'
                GridLayout:
                    cols:2
                    size_hint: 1, .2
                    TextInput:
                        background_color: (0, 0, 0, 1)
                        foreground_color: (0, 1, 0, 1)
                        cursor_color: (0, 1, 0, 1)
                        multiline: False
                        size_hint: .1, 1
                        text: 'root>>'
                        hint_text : "your action"
                        halign: "right"
                        cursor_blink: False
                        readonly: True
                    TextInput:
                        id : rootTextInput
                        background_color: (0, 0, 0, 1)
                        foreground_color: (0, 1, 0, 1)
                        cursor_color: (0, 1, 0, 1)
                        multiline: False
                        size_hint:.9, 1
                        cursor_blink: False
            Label:
                text:''
        GridLayout:
            cols:1
            row:4
            size_hint: .1, 1
            Button:
                text:'minimap'
                size_hint: .2, .4
                on_release : root.manager.Switch("map")
            Button:
                text:'stats'
                size_hint: .2, .4
                on_release: root.manager.Switch("stats")
            Button:
                text:'inventory'
                on_release: root.manager.Switch("inventory")
                size_hint: .2, .4
            Button:
                text:"Quest"
                size_hint: .2, .4
                on_release: root.manager.Switch("quest")
            Button:
                text:'wallet'
                size_hint: .2, .4
                on_release: root.manager.SwitchWallet()
            Button:
                text:'save and exit'
                on_release: exit(0)
                size_hint: .2, .4
            Label:
                text:''

<StatsScreen>:
    GridLayout:
        id:Stats
        cols: 1

<MarchandScreen>
    GridLayout:
        cols:1
        GridLayout:
            cols:2
            Label:
                text:"BUY"
            Label:
                text:"SELL"
            GridLayout:
                id:BuyGrid
                cols:2
            GridLayout:
                id:SellGrid
                cols:2
            Button:
                text:'Go back to game'
                on_release: root.manager.exit()
            Button:
                text:'Crypto wallet'
                on_release: root.manager.SwitchWallet("marchand")


<LevelUpScreen>:
    GridLayout:
        id:LevelUpGrid
        cols:1

<BoxScreen>:
    GridLayout:
        cols:1
        GridLayout:
            id: CarouselGrid
            cols:1
        Button:
            id:LootboxBtn
            text:'Open Lootbox'
            on_release: root.open_box()

<PauseScreen>:
    GridLayout:
        cols:3
        GridLayout:
            cols:1
        GridLayout:
            cols:1
            Button:
                text:"resume"
                on_release : root.manager.Switch("game")
            Button:
                text:"options"
                on_release : print("option")
            Button:
                text:"Quit"
                on_release: root.manager.Reset()
        GridLayout:
            cols:1

<MapScreen>:
    GridLayout:
        id : map
        cols:5


<QuestListScreen>:
    GridLayout:
        id:QuestList
        cols:1
        Label:
            text:"Quest List"

<BattleScreen>:
    GridLayout:
        id:BattleGrid
        cols:3
        Label:
            id:PlayerImage
            text:"this is the player image"
        Label:
            text:""
        Label:
            id:EnemyImage
            text:"this is the enemy image"
        Label:
            id:PlayerHp
            text:"this is the player hp"
        GridLayout:
            cols: 1
            Label:
                id:ActionDisplayPlayer
                text:"Player Action :"
            Label:
                id:ActionDisplayEnemy
                text:"Enemy Action :"
            Label:
                text:""
            Label:
                text:""

        Label:
            id:EnemyHp
            text:"this is the enemy hp"
        Label:
            id:PlayerStats
            text:"this is the player stats"
        GridLayout:
            cols:2
            id:BattleButtons
        Label:
            id:EnemyStats
            text:"this is the enemy stats"

<GameOverScreen>:
    GridLayout:
        id:GameOver
        cols:1
        Label:
            text:'GAME OVER'
            font_size: 100
        Button:
            text:'RESTART'
            on_release: root.manager.Reset()

<InventoryScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            id:Inventory
            cols:3
        Button:
            text:'go back to menu'
            on_release: root.manager.Switch("game")