#:kivy 1.8
#:import random random
#:import sys sys

<MenuScreen>:
    GridLayout:
        cols: 1
        Label:
            id: titleMenu
            text: "PyRPG"
            font_size: 100
        GridLayout:
            id: gridMenu
            cols: 2

<SettingsScreen>:
    Button:
        text: 'Hello again'
        on_release: root.manager.current = 'menu'


<NewGameScreen>:
    GridLayout:
        cols:1
        Label:
            id: titleNewGame
            text: "New Game"
            font_size: 50
        GridLayout:
            cols: 2
            Label:
                text : "Name :"
            TextInput:
                id : nameNewGame
                hint_text : "your name"
                halign: "center"
            Label:
                text : "Seed :"
            GridLayout:
                cols: 1
                TextInput:
                    id : seedNewGame
                    hint_text : "your seed"
                    halign: "center"
                Button:
                    text:'regenerate a new seed'
                    on_release: root.ids.seedNewGame.text = str(random.randrange(sys.maxsize))
        Button:
            id :buttonCreateGame
            text: "Create Game"

<GameScreen>:
    Button:
        text: "Hello World"
