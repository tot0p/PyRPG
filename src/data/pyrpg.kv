#:kivy 1.8
#:import random random
#:import sys sys

<MenuScreen>:
    GridLayout:
        cols: 1
        Label:
            id: titleMenu
            text: "PyRPG"
            font_size: 100
        GridLayout:
            id: gridMenu
            cols: 2

<SettingsScreen>:
    Button:
        text: 'Hello again'
        on_release: root.manager.current = 'menu'


<NewGameScreen>:
    GridLayout:
        cols:1
        Label:
            id: titleNewGame
            text: "New Game"
            font_size: 50
        GridLayout:
            cols: 2
            Label:
                text : "Name :"
            TextInput:
                id : nameNewGame
                hint_text : "your name"
                halign: "center"
            Label:
                text : "Seed :"
            GridLayout:
                cols: 1
                TextInput:
                    id : seedNewGame
                    hint_text : "your seed"
                    halign: "center"
                Button:
                    text:'regenerate a new seed'
                    on_release: root.ids.seedNewGame.text = str(random.randrange(sys.maxsize))
        Button:
            id :buttonCreateGame
            text: "Create Game"


<CryptoScreen>:
    canvas:

<GameScreen>:
    GridLayout:
        cols:3
        GridLayout:
            cols:1
            size_hint: .2, 1
            Label:
                text:''
        GridLayout:
            cols:1
            row:3
            Label:
                text:'the game text'
            Label:
                text:'what action can you do'
            GridLayout:
                cols:1
                row:2
                Label:
                    text:'previous actions'
                GridLayout:
                    cols:2
                    size_hint: 1, .2
                    TextInput:
                        background_color: (0, 0, 0, 1)
                        foreground_color: (0, 1, 0, 1)
                        cursor_color: (0, 1, 0, 1)
                        multiline: False
                        size_hint: .1, 1
                        text: 'root>>'
                        hint_text : "your action"
                        halign: "right"
                        cursor_blink: False
                        readonly: True
                    TextInput:
                        background_color: (0, 0, 0, 1)
                        foreground_color: (0, 1, 0, 1)
                        cursor_color: (0, 1, 0, 1)
                        multiline: False
                        size_hint:.9, 1
                        cursor_blink: False
            Label:
                text:''
        GridLayout:
            cols:1
            row:4
            size_hint: .1, 1
            Label:
                text:'minimap'
                size_hint: .2, .4
            Button:
                text:'stats'
                size_hint: .2, .4
            Button:
                text:'inventory'
                size_hint: .2, .4
            Button:
                text:'wallet'
                size_hint: .2, .4
            Button:
                text:'save and exit'
                on_release: exit(0)
                size_hint: .2, .4
            Label:
                text:''

<BoxScreen>:
    GridLayout:
        id: CarouselGrid
        cols:1